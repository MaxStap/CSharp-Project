<table>
    @foreach (DataRow dr in drArray)
    {
        <tr>
            <td>@dr["id"]</td>
            <td>@dr["artist"]</td>
            <td>@dr["song"]</td>
            <td>@dr["duration"]</td>
            <td>@dr["category"]</td>
            <td>@dr["year"]</td>
        </tr>


        <td><a href="Delete?id=@dr["id"]">Verwijderen</a></td>
        <td><a href="Edit?id=@dr["id"]">Edit</a></td>
        <td><a href="https://www.youtube.com/results?search_query=@dr["song"]">luister naar je nummer</a></td>
    }
</table>
