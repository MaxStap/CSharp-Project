@using System.Data;
@using CSharp_Project.Models;
@{
    ViewBag.Title = "Xml";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Songs song = new Songs();
    DataRow[] drArray = song.GetSongs();


    }
<br />
<h2>xml lijst</h2>
<br />
<br />
<br />
@{  
<a href="create">Toevoegen</a>
    }
